{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5","dom"],
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./public/js/app",
    "allowJs": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}
